{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build and run",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "&&",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": true
        },
        "problemMatcher": "$gcc"
      }
    ]
  }